# Environment Configuration Template
# Copy this file to .env and adjust values for your environment

# Service Configuration
NODE_ENV=development
HTTP_PORT=3000
MATCHMAKER_PORT=9999
ADMIN_DASHBOARD_PORT=3001
USE_HTTPS=false
LOG_TO_FILE=true
LOG_LEVEL=info
ENABLE_WEBSERVER=true

# Database Configuration
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://matchmaker:matchmaker123@localhost:5432/matchmaker

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
POSTGRES_PASSWORD=matchmaker123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session Management
SESSION_TIMEOUT_MS=1800000  # 30 minutes

# Health Monitoring
HEALTH_CHECK_INTERVAL_MS=30000  # 30 seconds

# SSL/TLS (when USE_HTTPS=true)
SSL_CERT_PATH=./certificates/cert.pem
SSL_KEY_PATH=./certificates/key.pem

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
ECS_CLUSTER_NAME=matchmaker-cluster
ECR_REPOSITORY=matchmaker

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# Development Settings
ENABLE_DEBUG_ROUTES=false
ENABLE_ADMIN_DASHBOARD=true
CORS_ORIGIN=*